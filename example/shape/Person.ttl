@prefix ex: <http://example.org/> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

ex:shape\/Person
    a sh:NodeShape ;
    sh:targetClass schema:Person ;
    sh:property
        [
            sh:path schema:name ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
        ] ,
        [
            sh:path schema:hasOccupation ;
            sh:maxCount 1 ;
            sh:class schema:Occupation ;
        ] ;
.
